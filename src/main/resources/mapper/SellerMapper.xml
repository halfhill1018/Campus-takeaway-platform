<mapper namespace="com.graduation.campustakeawayplatform.domain.repository.mapper.SellerMapper">

    <resultMap id="BaseResultMap" type="com.graduation.campustakeawayplatform.domain.repository.PO.SellerPO">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="VARCHAR"/>
            <result property="shopName" column="shop_name" jdbcType="VARCHAR"/>
            <result property="shopType" column="shop_type" jdbcType="VARCHAR"/>
            <result property="authenticationFlag" column="authentication_flag" jdbcType="TINYINT"/>
            <result property="businessLicense" column="business_license" jdbcType="VARCHAR"/>
            <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
            <result property="lastUpdateDate" column="last_update_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,shop_name,
        shop_type,authentication_flag,business_license,
        create_date,last_update_date
    </sql>



 <insert id="insertSelective">
insert into seller
<trim prefix="(" suffix=")" suffixOverrides=","><if test="id != null">id,</if>
<if test="userId != null">user_id,</if>
<if test="shopName != null">shop_name,</if>
<if test="shopType != null">shop_type,</if>
<if test="authenticationFlag != null">authentication_flag,</if>
<if test="businessLicense != null">business_license,</if>
<if test="createDate != null">create_date,</if>
<if test="lastUpdateDate != null">last_update_date,</if></trim>
values
<trim prefix="(" suffix=")" suffixOverrides=","><if test="id != null">#{id,jdbcType=VARCHAR},</if>
<if test="userId != null">#{userId,jdbcType=VARCHAR},</if>
<if test="shopName != null">#{shopName,jdbcType=VARCHAR},</if>
<if test="shopType != null">#{shopType,jdbcType=VARCHAR},</if>
<if test="authenticationFlag != null">#{authenticationFlag,jdbcType=TINYINT},</if>
<if test="businessLicense != null">#{businessLicense,jdbcType=VARCHAR},</if>
<if test="createDate != null">#{createDate,jdbcType=TIMESTAMP},</if>
<if test="lastUpdateDate != null">#{lastUpdateDate,jdbcType=TIMESTAMP},</if>
</trim>
</insert>



<select id="selectShopNameById" resultMap="BaseResultMap">
select shop_name
from seller
where
id = #{id,jdbcType=VARCHAR}
</select>
    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from seller
    </select>
    <select id="selectIdAndShopName" resultMap="BaseResultMap">
        select id, shop_name
        from seller
    </select>
</mapper>
